<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">People</div>
  <div class="panel-body">
    {{person-add createPerson="createPerson" person=model.person}}
  </div>
  {{#if model.people}}
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.people as |person index|}}
        <tr>
          <th scop="row">{{add-number index 1}}</th>
          <td>{{person.firstName}}</td>
          <td>{{person.lastName}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>
